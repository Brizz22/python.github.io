{
    // Untuk informasi lebih lanjut, kunjungi: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
      {
        "name": "Jalankan Program",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/index.js", // Ganti dengan nama file utama Anda
        "skipFiles": [
          "<node_internals>/**",
          "node_modules/**"
        ]
      }
    ]
  }
  
